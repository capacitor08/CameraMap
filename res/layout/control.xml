<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/controls"
    >
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#21FFFFFF">
	    <Button
		    android:id="@+id/gallerylist"  
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:background="@drawable/btn_list_selector"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="10dp"
		    android:layout_alignParentLeft="true"
	    />
	    <Button
            android:id="@+id/photomap"  
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:background="@drawable/btn_map_selector"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/gallerylist"
        />
	    <Button
			android:id="@+id/takepicture"  
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:background="@drawable/btn_picture_selector"
		    android:layout_centerVertical="true" 
			android:layout_centerHorizontal="true"
	    />
	    <Button
            android:id="@+id/screenshots"  
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:background="@drawable/btn_report_selector"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
        />
	    <Button
	        android:id="@+id/previewbtn"  
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_preview_selector"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="20dp"
	        android:layout_toLeftOf="@id/screenshots"
	        android:visibility="gone"
	    />
    </RelativeLayout>  
    <Button
        android:id="@+id/ChangeCamera"  
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:background="@drawable/camera_switch_selector"
        android:layout_margin="10px"
        android:visibility="gone"
    />
    
</RelativeLayout>